<section class="search-section" data-section-id="{{ section.id }}">
  <div class="search-container">
    <!-- Header de búsqueda -->
    <div class="search-header">
      <h1 class="search-title">
        {%- if search.performed -%}
          {%- if search.results_count == 0 -%}
            No se encontraron resultados
          {%- else -%}
            {{ search.results_count }} {{ search.results_count | pluralize: 'resultado', 'resultados' }} para "{{ search.terms }}"
          {%- endif -%}
        {%- else -%}
          Buscar productos
        {%- endif -%}
      </h1>
    </div>

    <!-- Formulario de búsqueda -->
    <div class="search-form-wrapper">
      <form action="{{ routes.search_url }}" method="get" class="search-form" role="search">
        <input type="hidden" name="type" value="product">
        <div class="search-input-container">
          <svg class="search-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <line x1="21" y1="21" x2="16.65" y2="16.65"/>
          </svg>
          <input 
            type="search" 
            name="q" 
            value="{{ search.terms | escape }}"
            placeholder="¿Qué estás buscando?"
            class="search-input"
            aria-label="Buscar"
            autocomplete="off"
            autofocus
          >
          {%- if search.terms != blank -%}
            <a href="{{ routes.search_url }}" class="search-clear" aria-label="Limpiar búsqueda">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"/>
                <line x1="6" y1="6" x2="18" y2="18"/>
              </svg>
            </a>
          {%- endif -%}
          <button type="submit" class="search-submit">
            Buscar
          </button>
        </div>
      </form>
    </div>

    <!-- Resultados -->
    {%- if search.performed -%}
      {%- if search.results_count > 0 -%}
        {%- paginate search.results by 16 -%}
          <div class="search-results">
            <div class="products-grid">
              {%- for item in search.results -%}
                {%- if item.object_type == 'product' -%}
                  <article class="product-card">
                    <a href="{{ item.url }}" class="product-card-link">
                      <div class="product-card-image">
                        {%- if item.featured_media -%}
                          {{ item.featured_media | image_url: width: 600 | image_tag:
                            loading: 'lazy',
                            class: 'product-image-primary',
                            widths: '300, 400, 600',
                            sizes: '(min-width: 1024px) 25vw, (min-width: 768px) 33vw, 50vw'
                          }}
                        {%- else -%}
                          <div class="product-card-placeholder">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                              <circle cx="8.5" cy="8.5" r="1.5"/>
                              <polyline points="21 15 16 10 5 21"/>
                            </svg>
                          </div>
                        {%- endif -%}

                        {%- if item.available == false -%}
                          <span class="badge badge--sold-out">Agotado</span>
                        {%- elsif item.compare_at_price > item.price -%}
                          <span class="badge badge--sale">Oferta</span>
                        {%- endif -%}
                      </div>

                      <div class="product-card-info">
                        {%- if item.vendor -%}
                          <p class="product-card-vendor">{{ item.vendor }}</p>
                        {%- endif -%}
                        <h3 class="product-card-title">{{ item.title }}</h3>
                        <div class="product-card-price">
                          {%- if item.compare_at_price > item.price -%}
                            <span class="price-compare">{{ item.compare_at_price | money }}</span>
                          {%- endif -%}
                          <span class="price{% if item.compare_at_price > item.price %} price--sale{% endif %}">
                            {{ item.price | money }}
                          </span>
                        </div>
                      </div>
                    </a>
                  </article>
                {%- endif -%}
              {%- endfor -%}
            </div>

            <!-- Paginación -->
            {%- if paginate.pages > 1 -%}
              <nav class="pagination" aria-label="Paginación">
                {%- if paginate.previous -%}
                  <a href="{{ paginate.previous.url }}" class="pagination-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="15 18 9 12 15 6"/>
                    </svg>
                  </a>
                {%- endif -%}

                <div class="pagination-numbers">
                  {%- for part in paginate.parts -%}
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" class="pagination-number">{{ part.title }}</a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span class="pagination-number pagination-current">{{ part.title }}</span>
                      {%- else -%}
                        <span class="pagination-ellipsis">{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}
                </div>

                {%- if paginate.next -%}
                  <a href="{{ paginate.next.url }}" class="pagination-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="9 18 15 12 9 6"/>
                    </svg>
                  </a>
                {%- endif -%}
              </nav>
            {%- endif -%}
          </div>
        {%- endpaginate -%}

      {%- else -%}
        <!-- Sin resultados -->
        <div class="search-empty">
          <div class="empty-icon">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <circle cx="11" cy="11" r="8"/>
              <line x1="21" y1="21" x2="16.65" y2="16.65"/>
              <line x1="8" y1="11" x2="14" y2="11"/>
            </svg>
          </div>
          <h2>No encontramos resultados para "{{ search.terms }}"</h2>
          <p>Intenta con otros términos o explora nuestras categorías</p>
          
          <div class="search-suggestions">
            <h3>Sugerencias:</h3>
            <ul>
              <li>Revisa la ortografía de las palabras</li>
              <li>Usa palabras más generales</li>
              <li>Prueba con sinónimos</li>
            </ul>
          </div>

          <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
            Ver todos los productos
          </a>
        </div>
      {%- endif -%}

    {%- else -%}
      <!-- Estado inicial - búsqueda no realizada -->
      <div class="search-initial">
        <div class="popular-searches">
          <h3>Búsquedas populares</h3>
          <div class="search-tags">
            <a href="{{ routes.search_url }}?q=computador" class="search-tag">Computadores</a>
            <a href="{{ routes.search_url }}?q=tablet" class="search-tag">Tablets</a>
            <a href="{{ routes.search_url }}?q=parlante" class="search-tag">Parlantes</a>
            <a href="{{ routes.search_url }}?q=cable" class="search-tag">Cables</a>
            <a href="{{ routes.search_url }}?q=accesorios" class="search-tag">Accesorios</a>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .search-section {
    padding: var(--space-12) 0 var(--space-20);
    min-height: 70vh;
    background: var(--color-bg);
  }

  .search-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .search-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .search-title {
    font-family: var(--font-heading);
    font-size: clamp(var(--text-xl), 4vw, var(--text-3xl));
    font-weight: 700;
    margin: 0;
    color: var(--color-text);
  }

  /* Formulario de búsqueda - Estilo NANO */
  .search-form-wrapper {
    margin-bottom: var(--space-12);
  }

  .search-input-container {
    display: flex;
    align-items: center;
    background: var(--color-surface);
    border: 3px solid var(--color-accent);
    border-radius: var(--radius-2xl);
    padding: var(--space-2);
    transition: all var(--transition-fast);
    box-shadow: 0 4px 20px var(--color-accent-glow);
  }

  .search-input-container:focus-within {
    border-color: var(--color-accent-hover);
    box-shadow: 0 8px 30px var(--color-accent-glow);
    transform: translateY(-2px);
  }

  .search-icon {
    margin-left: var(--space-4);
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    padding: var(--space-4);
    background: transparent;
    border: none;
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--color-text);
  }

  .search-input:focus {
    outline: none;
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .search-clear {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
    border-radius: var(--radius-full);
  }

  .search-clear:hover {
    color: var(--color-error);
    background: var(--color-error-light);
  }

  .search-submit {
    padding: var(--space-4) var(--space-8);
    background: var(--color-accent);
    color: white;
    font-weight: 700;
    font-size: var(--text-base);
    border-radius: var(--radius-xl);
    transition: all var(--transition-fast);
  }

  .search-submit:hover {
    background: var(--color-accent-hover);
    transform: scale(1.02);
  }

  /* Grid de productos */
  .search-results .products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    margin-bottom: var(--space-10);
  }

  /* Product Card (reutilizado) */
  .search-results .product-card {
    background: var(--color-surface);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
    border: 1px solid var(--color-border);
  }

  .search-results .product-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--color-accent-glow);
    border-color: var(--color-border-accent);
  }

  .search-results .product-card-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: var(--color-bg-alt);
  }

  .search-results .product-image-primary {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .search-results .product-card:hover .product-image-primary {
    transform: scale(1.08);
  }

  .search-results .product-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
  }

  .search-results .badge {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: 700;
    border-radius: var(--radius-full);
  }

  .search-results .badge--sale {
    background: var(--color-error);
    color: white;
  }

  .search-results .badge--sold-out {
    background: var(--color-text-muted);
    color: white;
  }

  .search-results .product-card-info {
    padding: var(--space-4);
  }

  .search-results .product-card-vendor {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 var(--space-1);
  }

  .search-results .product-card-title {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 var(--space-2);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .search-results .product-card-price {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .search-results .price {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-accent);
  }

  .search-results .price--sale {
    color: var(--color-error);
  }

  .search-results .price-compare {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: line-through;
  }

  /* Paginación */
  .search-section .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  .search-section .pagination-btn,
  .search-section .pagination-number {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .search-section .pagination-btn:hover,
  .search-section .pagination-number:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .search-section .pagination-current {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .search-section .pagination-numbers {
    display: flex;
    gap: var(--space-2);
  }

  /* Estado vacío */
  .search-empty {
    text-align: center;
    padding: var(--space-16) var(--space-6);
    background: var(--color-surface);
    border-radius: var(--radius-2xl);
    border: 1px solid var(--color-border);
  }

  .search-empty .empty-icon {
    width: 100px;
    height: 100px;
    margin: 0 auto var(--space-6);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-alt);
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
  }

  .search-empty h2 {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    color: var(--color-text);
    margin: 0 0 var(--space-2);
  }

  .search-empty p {
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-8);
  }

  .search-suggestions {
    background: var(--color-bg-alt);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    margin-bottom: var(--space-8);
    text-align: left;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
    border: 1px solid var(--color-border);
  }

  .search-suggestions h3 {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 var(--space-4);
  }

  .search-suggestions ul {
    list-style: disc;
    padding-left: var(--space-6);
    margin: 0;
  }

  .search-suggestions li {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }

  /* Estado inicial - Estilo NANO */
  .search-initial {
    text-align: center;
    padding: var(--space-12);
    background: var(--color-surface);
    border-radius: var(--radius-2xl);
    border: 1px solid var(--color-border);
  }

  .popular-searches h3 {
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 var(--space-6);
  }

  .search-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
  }

  .search-tag {
    padding: var(--space-3) var(--space-5);
    background: var(--color-bg-alt);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    transition: all var(--transition-fast);
    color: var(--color-text);
  }

  .search-tag:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .search-results .products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .search-section {
      padding: var(--space-6) 0 var(--space-12);
    }

    .search-results .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-3);
    }

    .search-input-container {
      flex-wrap: wrap;
      padding: var(--space-3);
    }

    .search-submit {
      width: 100%;
      margin-top: var(--space-2);
    }

    .search-initial {
      padding: var(--space-6);
    }
  }
</style>

{% schema %}
{
  "name": "Búsqueda",
  "tag": "section",
  "class": "section-search",
  "settings": [
    {
      "type": "range",
      "id": "results_per_page",
      "min": 8,
      "max": 32,
      "step": 4,
      "default": 16,
      "label": "Resultados por página"
    }
  ]
}
{% endschema %}

















