{% comment %}
  Featured Products - Bento Grid Layout 2026
  Con Stopping Power y elementos hand-drawn
{% endcomment %}

<section class="featured-section" data-section-id="{{ section.id }}">
  <div class="container">
    <!-- Section Header -->
    <header class="section-header reveal">
      <div class="section-header__content">
        {%- if section.settings.eyebrow != blank -%}
          <span class="section-eyebrow text-handwritten">{{ section.settings.eyebrow }}</span>
        {%- endif -%}
        <h2 class="section-title">
          {{ section.settings.title | default: 'Nuestros Productos' }}
        </h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="section-subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>

      <!-- Hand-drawn arrow pointing to products -->
      <div class="section-header__arrow handdrawn-arrow" aria-hidden="true"></div>
    </header>

    <!-- Products Bento Grid -->
    <div class="products-bento reveal-stagger">
      {%- if section.settings.collection != blank -%}
        {%- assign products_count = section.settings.collection.products | size -%}
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          {%- assign is_featured = false -%}
          {%- if forloop.index == 1 and section.settings.feature_first -%}
            {%- assign is_featured = true -%}
          {%- endif -%}

          <article class="product-card{% if is_featured %} product-card--featured{% endif %}">
            <a href="{{ product.url }}" class="product-card__link">
              <!-- Image -->
              <div class="product-card__image">
                {%- if product.featured_image != blank -%}
                  <img 
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | default: product.title }}"
                    width="600"
                    height="600"
                    loading="lazy"
                  >
                {%- else -%}
                  <div class="product-card__placeholder">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21 15 16 10 5 21"/>
                    </svg>
                  </div>
                {%- endif -%}

                <!-- Badges -->
                <div class="product-card__badges">
                  {%- if product.compare_at_price > product.price -%}
                    {%- assign discount = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round -%}
                    <span class="badge badge--sale{% if discount >= 30 %} badge--stopping{% endif %}">
                      -{{ discount }}%
                    </span>
                  {%- endif -%}
                  
                  {%- if product.available == false -%}
                    <span class="badge badge--soldout">Agotado</span>
                  {%- elsif forloop.index <= 3 and section.settings.show_bestseller_badge -%}
                    <span class="badge badge--handdrawn">⭐ Popular</span>
                  {%- endif -%}
                </div>

                <!-- Quick add overlay -->
                {%- if product.available -%}
                  <div class="product-card__quick-add">
                    <span class="product-card__quick-text">Vista rápida</span>
                  </div>
                {%- endif -%}
              </div>

              <!-- Content -->
              <div class="product-card__content">
                {%- if product.vendor != blank and section.settings.show_vendor -%}
                  <span class="product-card__vendor">{{ product.vendor }}</span>
                {%- endif -%}
                
                <h3 class="product-card__title">{{ product.title }}</h3>
                
                <div class="product-card__price">
                  <span class="product-card__price-current">{{ product.price | money }}</span>
                  {%- if product.compare_at_price > product.price -%}
                    <span class="product-card__price-compare">{{ product.compare_at_price | money }}</span>
                  {%- endif -%}
                </div>
              </div>
            </a>

            <!-- Add to Cart Form -->
            <div class="product-card__actions">
              {%- assign card_variant = product.selected_or_first_available_variant -%}
              {%- if card_variant.available -%}
                <form action="/cart/add" method="post" class="product-card-form">
                  <input type="hidden" name="id" value="{{ card_variant.id }}">
                  <input type="hidden" name="quantity" value="1">
                  <button type="submit" class="product-card__btn">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="9" cy="21" r="1"/>
                      <circle cx="20" cy="21" r="1"/>
                      <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                    </svg>
                    <span>Agregar</span>
                  </button>
                </form>
              {%- else -%}
                <button type="button" class="product-card__btn product-card__btn--disabled" disabled>
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"/>
                  </svg>
                  <span>Agotado</span>
                </button>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}

        <!-- Promotional Cell (Stopping Power) -->
        {%- if section.settings.show_promo_cell -%}
          <div class="promo-cell bento-cell">
            <div class="promo-cell__content">
              <span class="promo-cell__eyebrow text-handwritten">{{ section.settings.promo_eyebrow | default: '¡No te lo pierdas!' }}</span>
              <h3 class="promo-cell__title kinetic-text">{{ section.settings.promo_title | default: 'Ofertas Especiales' }}</h3>
              <p class="promo-cell__text">{{ section.settings.promo_text | default: 'Descuentos de hasta 50% en productos seleccionados' }}</p>
              <a href="{{ section.settings.promo_link | default: collections.all.url }}" class="btn btn--primary">
                Ver ofertas
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
            <div class="promo-cell__decoration" aria-hidden="true">
              <svg viewBox="0 0 100 100" fill="none">
                <circle cx="80" cy="20" r="30" fill="var(--color-secondary)" opacity="0.3"/>
                <circle cx="20" cy="80" r="20" fill="var(--color-accent)" opacity="0.2"/>
              </svg>
            </div>
          </div>
        {%- endif -%}

      {%- else -%}
        <!-- Placeholder products when no collection selected -->
        {%- for i in (1..section.settings.products_to_show) -%}
          <article class="product-card{% if forloop.first and section.settings.feature_first %} product-card--featured{% endif %}">
            <div class="product-card__image">
              <div class="product-card__placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21 15 16 10 5 21"/>
                </svg>
              </div>
              <div class="product-card__badges">
                {%- if forloop.index == 2 -%}
                  <span class="badge badge--sale badge--stopping">-30%</span>
                {%- endif -%}
              </div>
            </div>
            <div class="product-card__content">
              <h3 class="product-card__title">Producto de ejemplo {{ i }}</h3>
              <div class="product-card__price">
                <span class="product-card__price-current">$99.900</span>
              </div>
            </div>
            <div class="product-card__actions">
              <button type="button" class="product-card__btn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="9" cy="21" r="1"/>
                  <circle cx="20" cy="21" r="1"/>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                </svg>
                <span>Agregar</span>
              </button>
            </div>
          </article>
        {%- endfor -%}
      {%- endif -%}
    </div>

    <!-- View All Button -->
    {%- if section.settings.show_view_all and section.settings.collection != blank -%}
      <footer class="section-footer reveal">
        <a href="{{ section.settings.collection.url }}" class="btn btn--secondary btn--lg">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7"/>
            <rect x="14" y="3" width="7" height="7"/>
            <rect x="14" y="14" width="7" height="7"/>
            <rect x="3" y="14" width="7" height="7"/>
          </svg>
          Ver todos los productos
        </a>
      </footer>
    {%- endif -%}
  </div>
</section>

<style>
  .featured-section {
    padding: var(--space-16) 0;
    background: var(--color-bg);
  }

  /* Section Header */
  .section-header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-bottom: var(--space-10);
    gap: var(--space-6);
  }

  .section-header__content {
    max-width: 600px;
  }

  .section-eyebrow {
    display: inline-block;
    font-size: var(--text-xl);
    margin-bottom: var(--space-2);
  }

  .section-header__arrow {
    transform: rotate(135deg) scaleX(-1);
    opacity: 0.7;
    flex-shrink: 0;
  }

  /* Products Bento Grid */
  .products-bento {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--bento-gap-lg);
  }

  /* Product Card */
  .product-card {
    position: relative;
    background: var(--color-surface);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: all var(--transition-base);
  }

  .product-card:hover {
    border-color: var(--color-border-accent);
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--color-accent-glow);
  }

  .product-card__link {
    display: flex;
    flex-direction: column;
    flex: 1;
    text-decoration: none;
    color: inherit;
  }

  /* Featured Product (larger) */
  .product-card--featured {
    grid-column: span 2;
    grid-row: span 2;
  }

  .product-card--featured .product-card__image {
    aspect-ratio: 4/3;
  }

  .product-card--featured .product-card__title {
    font-size: var(--text-xl);
  }

  .product-card--featured .product-card__price-current {
    font-size: var(--text-2xl);
  }

  /* Product Image */
  .product-card__image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: var(--color-bg-alt);
  }

  .product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .product-card:hover .product-card__image img {
    transform: scale(1.08);
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
  }

  /* Badges */
  .product-card__badges {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    z-index: 2;
  }

  .badge--soldout {
    background: var(--color-text-muted);
    color: white;
  }

  /* Quick Add Overlay */
  .product-card__quick-add {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .product-card:hover .product-card__quick-add {
    opacity: 1;
  }

  .product-card__quick-text {
    padding: var(--space-2) var(--space-4);
    background: white;
    color: var(--color-text);
    font-size: var(--text-sm);
    font-weight: 600;
    border-radius: var(--radius-full);
  }

  /* Product Content */
  .product-card__content {
    padding: var(--space-4);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .product-card__vendor {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-1);
  }

  .product-card__title {
    font-family: var(--font-body);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    margin-bottom: var(--space-2);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card__price {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: auto;
  }

  .product-card__price-current {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-accent);
  }

  .product-card__price-compare {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: line-through;
  }

  /* Product Actions */
  .product-card__actions {
    padding: 0 var(--space-4) var(--space-4);
  }

  .product-card__btn {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    background: var(--color-accent);
    color: white;
    border: none;
    border-radius: var(--radius-lg);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .product-card__btn:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
  }

  .product-card__btn--disabled {
    background: var(--color-text-muted);
    cursor: not-allowed;
  }

  .product-card__btn--disabled:hover {
    transform: none;
  }

  /* Promo Cell */
  .promo-cell {
    grid-column: span 2;
    position: relative;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-secondary) 100%);
    padding: var(--space-8);
    display: flex;
    align-items: center;
    border: none;
    overflow: hidden;
  }

  .promo-cell:hover {
    border: none;
  }

  .promo-cell__content {
    position: relative;
    z-index: 2;
    max-width: 300px;
  }

  .promo-cell__eyebrow {
    display: block;
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-2);
  }

  .promo-cell__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: white;
    margin-bottom: var(--space-3);
    line-height: 1.2;
  }

  .promo-cell__text {
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: var(--space-6);
  }

  .promo-cell .btn--primary {
    background: white;
    color: var(--color-accent);
  }

  .promo-cell .btn--primary:hover {
    background: var(--color-bg);
  }

  .promo-cell__decoration {
    position: absolute;
    right: -20%;
    top: -20%;
    width: 80%;
    height: 140%;
    pointer-events: none;
  }

  .promo-cell__decoration svg {
    width: 100%;
    height: 100%;
  }

  /* Section Footer */
  .section-footer {
    text-align: center;
    margin-top: var(--space-10);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .products-bento {
      grid-template-columns: repeat(3, 1fr);
    }

    .product-card--featured {
      grid-column: span 2;
      grid-row: span 1;
    }

    .product-card--featured .product-card__image {
      aspect-ratio: 16/9;
    }

    .promo-cell {
      grid-column: span 3;
    }
  }

  @media (max-width: 768px) {
    .featured-section {
      padding: var(--space-10) 0;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
    }

    .section-header__arrow {
      display: none;
    }

    .products-bento {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--bento-gap);
    }

    .product-card--featured {
      grid-column: span 2;
    }

    .promo-cell {
      grid-column: span 2;
      padding: var(--space-6);
    }

    .promo-cell__title {
      font-size: var(--text-2xl);
    }
  }

  @media (max-width: 480px) {
    .products-bento {
      grid-template-columns: 1fr;
    }

    .product-card--featured,
    .promo-cell {
      grid-column: span 1;
    }
  }
</style>

