{% comment %}
  Benefits Section 2026
  Bento Grid asimétrico con tipografía cinética
{% endcomment %}

<section class="benefits-section" data-section-id="{{ section.id }}">
  <div class="benefits__container">
    
    <!-- Section Header -->
    {%- if section.settings.title != blank -%}
      <header class="section-header reveal">
        <span class="section-eyebrow text-handwritten">{{ section.settings.eyebrow | default: '¿Por qué elegirnos?' }}</span>
        <h2 class="section-title">{{ section.settings.title }}</h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="section-subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    <!-- Bento Grid - Asimétrico -->
    <div class="benefits__bento reveal-stagger">
      
      <!-- Envío Gratis - Large Cell -->
      <div class="benefits__cell benefits__cell--shipping bento-cell bento-cell--2x1">
        <div class="benefits__cell-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="3" width="15" height="13"/>
            <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
            <circle cx="5.5" cy="18.5" r="2.5"/>
            <circle cx="18.5" cy="18.5" r="2.5"/>
          </svg>
        </div>
        <div class="benefits__cell-content">
          <h3 class="benefits__cell-title kinetic-text">Envío Gratis</h3>
          <p class="benefits__cell-text">En pedidos mayores a $100.000. Recibe tu pedido en la puerta de tu casa sin costo adicional.</p>
        </div>
        <div class="benefits__cell-badge badge badge--handdrawn">¡Gratis!</div>
        
        <!-- Decorative hand-drawn element -->
        <div class="benefits__cell-decoration" aria-hidden="true">
          <svg viewBox="0 0 100 50" fill="none">
            <path d="M5 25 Q25 5, 50 25 T95 25" stroke="var(--color-handdrawn)" stroke-width="2" fill="none" stroke-linecap="round" stroke-dasharray="5 5"/>
          </svg>
        </div>
      </div>

      <!-- Garantía - Regular Cell -->
      <div class="benefits__cell benefits__cell--warranty bento-cell">
        <div class="benefits__cell-icon benefits__cell-icon--accent">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            <polyline points="9 12 11 14 15 10"/>
          </svg>
        </div>
        <h3 class="benefits__cell-title">Garantía de al menos <span class="text-handwritten">6 Meses</span></h3>
        <p class="benefits__cell-text">Garantía de al menos 6 meses en todos nuestros productos.</p>
      </div>

      <!-- Pago Seguro - Regular Cell -->
      <div class="benefits__cell benefits__cell--payment bento-cell">
        <div class="benefits__cell-icon benefits__cell-icon--secondary">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
            <line x1="1" y1="10" x2="23" y2="10"/>
          </svg>
        </div>
        <h3 class="benefits__cell-title">Pago Seguro</h3>
        <p class="benefits__cell-text">Acepta todas las tarjetas y medios de pago. Tu información está protegida.</p>
      </div>

      <!-- Soporte - Tall Cell -->
      <div class="benefits__cell benefits__cell--support bento-cell bento-cell--1x2">
        <div class="benefits__cell-icon benefits__cell-icon--large">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          </svg>
        </div>
