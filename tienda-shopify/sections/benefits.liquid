      "default": "¿Por qué comprar con nosotros?"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Tu satisfacción es nuestra prioridad"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Mostrar estadísticas",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Beneficios 2026",
      "category": "Contenido"
    }
  ]
}
{% endschema %}
